transformer:
  email-headers:
    inject:
      List-Unsubscribe: <mailto:unsub-{{uuid}}@{{from-domain}}>
  postfix:
    hostname: localhost
    port: 8027
  reliable-queue:
    redis:
      hostname: localhost
      port: 6379
  log-directory: logs
  # Feel free to add multiple dkim configurations.
  dkim:
   - domain: example.com
     dkim-private-key-file: ../../../cert/dkim-test-private.key
   - domain: bexample.com
     dkim-private-key-file: ../../../cert/dkim-test-private.key
receiver:
  bind:
    inet-interface: localhost
    inet-port: 8025
  auth-logins:
    - username: apa
      password: banan
    #You can have more logins if you like
    - username: citron
      password: dadel
  ignore-smtp-mail-from-rcpt-to:
    true
  reliable-queue:
    redis:
      hostname: localhost
      port: 6379
  log-directory: logs
mxserver:
  bind:
    inet-interface: localhost
    inet-port: 8026
  eml-directory:
    tmp
  log-directory: logs
backdata:
  reliable-queue:
    redis:
      hostname: localhost
      port: 6379
  post-url: http://localhost:8090
  log-directory: logs
postfixlog:
  logfile: /var/log/mail.log
  #logfile: test/test2.log
  locationfile: /tmp/postfixlog-location
  log-directory: logs
  reliable-queue:
    redis:
      hostname: localhost
      port: 6379
